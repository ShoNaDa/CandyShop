<Window x:Class="Candy_shop.MenuDirector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CandyShop" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="Images\background.jpeg"/>
    </Window.Background>

    <Grid>
        <TabControl>
            <TabControl.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </TabControl.Background>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Сотрудники" FontSize="30" FontFamily="Calibri"/>
                </TabItem.Header>

                <StackPanel Orientation="Horizontal">
                    <ListBox MaxWidth="800" MinWidth="800" HorizontalAlignment="Left" Margin="10" Background="#FFCBFDAE" BorderBrush="#FF9A5F9C" 
                BorderThickness="3" FontSize="47" FontFamily="Calibri" x:Name="WorkersListBox"/>

                    <StackPanel Orientation="Vertical">
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="100"
                    BorderThickness="3" BorderBrush="#FF9A5F9C" MinWidth="100" MinHeight="100" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/add.png" />
                            </Border.Background>
                            <Button FontSize="50" FontFamily="Calibri" Cursor="Hand" Margin="10"
                        x:Name="AddButton" Click="AddButton_Click"/>
                        </Border>

                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="100"
                    BorderThickness="3" BorderBrush="#FF9A5F9C" MinWidth="100" MinHeight="100" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/delete.png" />
                            </Border.Background>
                            <Button FontSize="50" FontFamily="Calibri" Cursor="Hand" Margin="10" 
                        x:Name="DeleteButton" Click="DeleteButton_Click"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Товары" FontSize="30" FontFamily="Calibri"/>
                </TabItem.Header>

                <StackPanel Orientation="Horizontal">
                    <ListBox MaxWidth="800" MinWidth="800" HorizontalAlignment="Left" Margin="10" Background="#FFCBFDAE" BorderBrush="#FF9A5F9C" 
                BorderThickness="3" FontSize="47" FontFamily="Calibri" x:Name="ProductsListBox"/>

                    <StackPanel Orientation="Vertical">
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="100"
                    BorderThickness="3" BorderBrush="#FF9A5F9C" MinWidth="100" MinHeight="100" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/add.png"/>
                            </Border.Background>
                            <Button FontSize="50" FontFamily="Calibri" Cursor="Hand" Margin="10" 
                        x:Name="AddProductButton" Click="AddProductButton_Click"  Padding="0,-2,0,0"/>
                        </Border>

                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="100"
                    BorderThickness="3" BorderBrush="#FF9A5F9C" MinWidth="100" MinHeight="100" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/edit.jpg"/>
                            </Border.Background>
                            <Button FontSize="50" FontFamily="Calibri" Cursor="Hand" Margin="10" 
                        x:Name="EditProductButton" Click="EditProductButton_Click"/>
                        </Border>

                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="100"
                    BorderThickness="3" BorderBrush="#FF9A5F9C" MinWidth="100" MinHeight="100" Margin="10">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/delete.png"/>
                            </Border.Background>
                            <Button FontSize="50" FontFamily="Calibri" Cursor="Hand" Margin="10" 
                        x:Name="DeleteProductButton" Click="DeleteProductButton_Click"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <Label Content="Профиль" FontSize="30" FontFamily="Calibri"/>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <!-- Верхняя часть -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Фотка -->
                        <Border x:Name="photoBorder" HorizontalAlignment="Center" BorderBrush="#FF06A087" BorderThickness="3" Margin="5" MinWidth="300">
                            <Border.Background>
                                <ImageBrush x:Name="image" ImageSource="/Images/Photo.jpg" />
                            </Border.Background>

                        </Border>

                        <!-- Правая часть -->
                        <Grid Grid.Column="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                    <Label Content="Фамилия" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="lNameLabel"/>
                                </Border>

                                <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                    <Label Content="Имя" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="fNameLabel"/>
                                </Border>

                                <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                    <Label Content="Отчество" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="mNameLabel"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Нижняя часть -->
                    <Grid Grid.Row="1">
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
                            <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                <Label Content="Телефон" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="phoneLabel"/>
                            </Border>

                            <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                <Label Content="Должность" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="postLabel"/>
                            </Border>

                            <Border BorderThickness="2" BorderBrush="#FF4242C1" CornerRadius="10" Margin="10">
                                <Label Content="День рождения" FontSize="40" FontFamily="Calibri" HorizontalAlignment="Center" x:Name="birthdayLabel"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>